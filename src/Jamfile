    # default build
    :
;


stage sqlitepp
    # sources
    : <lib>sqlitepp <lib>sqlitepp-utf16
    # requirements
    : <locate>$(TOP)/lib common-variant-tag <target>stage <target>all
    # local build
    : debug release
;
